@page
@model Restaurant_management_system.Pages.ResistrationModel
@{
}
@if (Model.success_msg.Length > 0)
{    
    <div>
        <div class="row-cols-1">
            <div class="alert alert-success alert-dismissible">
                @Model.success_msg

                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    </div>
}
@if (Model.error_msg.Length > 0)
{

    <div>
        <div class="row-cols-1">
            <div class="alert alert-danger alert-dismissible">
                @Model.error_msg
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    </div>
}

<marquee style="text-color:red"> Welcome to Resto. Currently,we are operating in online mode. Only cash is acceptable...</marquee>
<div class="text-center" style="color:blue">
    <b>Welcome to registration page</b>
</div>

<form method="post">
    <div class="row row-cols-1">


        <label class="col-form-label">Customer Name</label>
        <div>
            <input type="text" class="form-control" name="customerName" placeholder="name" value="" required>
        </div>

        <label class="col-form-label">Customer Email</label>
        <div>
            <input type="email" class="form-control" name="CustomerEmail" placeholder="name@gmail.com" value="" required>
        </div>        
        <label class="col-form-label">Password</label>
        <div>
            <input type="password" class="form-control" name="CustomerPassword" placeholder="password" value="" required>
        </div>          
        <br>
        <br>
        <br>
        <div>
            <button class="btn btn-success">SUBMIT</button>
            <a href="./Index" type="reset" class="btn btn-danger">Cancel</a>
        </div>        
        <br />
        <br />
        <div>            
            <a class="btn btn-outline-primary" href="./AdminUserLogin"><span style="color:blue">click here to login..</span></a>
        </div>

    </div>
</form>